<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="74dp"
        android:layout_height="22dp"
        android:text="  Roll"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="406dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="73dp"
        android:layout_height="26dp"
        android:text="  About"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="552dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="556dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lecturer"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="406dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Student"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="482dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Instructor"
        app:layout_constraintBottom_toTopOf="@+id/radioButton2"
        app:layout_constraintTop_toBottomOf="@+id/radioButton"
        tools:layout_editor_absoluteX="148dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/editText4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="266dp" />

    <ScrollView
        android:layout_width="169dp"
        android:layout_height="102dp"
        android:clipToPadding="true"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="266dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton10"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Chemical" />

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Civil" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Computer" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:text="Electrical & Electronic" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Manufacturing" />

            <RadioButton
                android:id="@+id/radioButton7"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Mechanical" />

        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="154dp"
        android:layout_height="32dp"
        android:ems="10"
        android:hint="Reg. Number"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="444dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="154dp"
        android:layout_height="31dp"
        android:ems="10"
        android:hint="Reg. Number"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="482dp" />

</android.support.constraint.ConstraintLayout>